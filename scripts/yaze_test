#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

if [[ -n "${YAZE_TEST_BIN:-}" ]]; then
  exec "${YAZE_TEST_BIN}" "$@"
fi

ai_candidates=(
  "${ROOT}/build_ai/bin/Debug/yaze_test"
  "${ROOT}/build_ai/bin/RelWithDebInfo/yaze_test"
  "${ROOT}/build_ai/bin/Release/yaze_test"
  "${ROOT}/build_ai/bin/yaze_test"
)
other_candidates=(
  "${ROOT}/build/bin/Debug/yaze_test"
  "${ROOT}/build/bin/RelWithDebInfo/yaze_test"
  "${ROOT}/build/bin/Release/yaze_test"
  "${ROOT}/build/bin/yaze_test"
)

_mtime() {
  # macOS: stat -f %m, Linux: stat -c %Y
  if stat -f %m "$1" >/dev/null 2>&1; then
    stat -f %m "$1"
  else
    stat -c %Y "$1"
  fi
}

pick_newest() {
  local best=""
  local best_mtime="-1"
  local c=""
  local m=""

  for c in "$@"; do
    if [[ -x "${c}" ]]; then
      m="$(_mtime "${c}" || echo 0)"
      if [[ "${m}" -gt "${best_mtime}" ]]; then
        best_mtime="${m}"
        best="${c}"
      fi
    fi
  done

  echo "${best}"
}

# Prefer build_ai whenever it exists, even if build/ is newer.
bin="$(pick_newest "${ai_candidates[@]}")"
if [[ -z "${bin}" ]]; then
  bin="$(pick_newest "${other_candidates[@]}")"
fi

if [[ -z "${bin}" ]]; then
  cat >&2 <<'EOF'
yaze_test binary not found.

Common build:
  cmake --preset mac-ai
  cmake --build build_ai --target yaze_test

Or set YAZE_TEST_BIN=/path/to/yaze_test.
EOF
  exit 1
fi

exec "${bin}" "$@"
