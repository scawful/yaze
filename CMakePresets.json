  "testPresets": [
    {
      "name": "all",
      "configurePreset": "dev",
      "displayName": "All Tests",
      "description": "Run all tests including ROM-dependent tests"
    },
    {
      "name": "stable",
      "configurePreset": "minimal",
      "displayName": "Stable Tests",
      "description": "Run stable tests only (no ROM dependency)",
      "filter": {
        "include": {
          "label": "stable"
        }
      }
    },
    {
      "name": "unit",
